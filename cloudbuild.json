{
  "steps": [
    {
      "name": "node:12-alpine",
      "entrypoint": "npm",
      "args": ["ci"]
    },
    {
      "name": "node:12-alpine",
      "entrypoint": "npm",
      "args": ["run", "build"]
    },
    {
      "name": "node:12-alpine",
      "entrypoint": "find",
      "args": ["./node_modules", "-mtime", "+10950", "-exec", "touch", "{}"]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "args": [
        "functions",
        "deploy",
        "totaren-bot",
        "--region",
        "europe-west3",
        "--allow-unauthenticated",
        "--entry-point",
        "webhook",
        "--memory",
        "128MB",
        "--runtime",
        "nodejs10",
        "--trigger-http",
        "--timeout",
        "30s"
      ]
    }
  ]
}
