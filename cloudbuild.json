{
  "steps": [
    {
      "name": "node:12-alpine",
      "entrypoint": "npm",
      "args": ["ci"]
    },
    {
      "name": "node:12-alpine",
      "entrypoint": "npm",
      "args": ["run", "build"]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "args": [
        "functions",
        "deploy",
        "totaren-bot",
        "--region",
        "europe-west3",
        "--allow-unauthenticated",
        "--entry-point",
        "server",
        "--memory",
        "128MB",
        "--runtime",
        "nodejs12",
        "--timeout",
        "30s",
        "--trigger-http"
      ],
      "env": ["FUNCTION_TARGET=dist/main.js"]
    }
  ]
}
